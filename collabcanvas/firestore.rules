rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function for authentication
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Canvases collection - simplified permissive rules for authenticated users
    match /canvases/{canvasId} {
      // Allow authenticated users to read any canvas
      allow read: if isAuthenticated();
      
      // Allow authenticated users to write to canvas (create, update, delete)
      allow write: if isAuthenticated();
    }
    
    // Components collection - reusable components/symbols
    match /components/{componentId} {
      // Allow authenticated users to read any component
      allow read: if isAuthenticated();
      
      // Allow authenticated users to create components
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.createdBy;
      
      // Allow authenticated users to update/delete their own components
      allow update, delete: if isAuthenticated();
    }
    
    // Comments collection - collaborative comments/annotations
    match /comments/{commentId} {
      // Allow authenticated users to read any comment
      allow read: if isAuthenticated();
      
      // Allow authenticated users to create comments
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.createdBy;
      
      // Allow authenticated users to update/delete comments
      allow update, delete: if isAuthenticated();
    }
  }
}

